<div class="offerings">
  <h1>My Showers:</h1>
  <div class="card">
    <% current_user.owned_showers.each do |shower| %>
      <%= link_to shower_path(shower) do %>
        <div class="card-shower">
          <%= cl_image_tag shower.photo, crop: :fill %>
            <div class="card-shower-infos">
              <div>
                <h1><strong><%= shower.title %></strong></h1>
                <p><%= shower.address %></p>
              </div>
              <h2 class="card-shower-pricing"><%= " #{shower.price}â‚¬ " %></h2>
              <%= image_tag "avatar.png", class:"card-shower-user avatar-bordered" %>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
