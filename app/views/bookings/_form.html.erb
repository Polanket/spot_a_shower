<!-- app/views/restaurants/_form.html.erb -->
<%= simple_form_for [@shower, @booking] do |f| %>
<%= f.input :date, label: false, class: "form-text text-muted" %>
<%= f.input :time, collection: Booking.time, selected: '9:30 - 10:00', label: false, class: "form-text text-muted" %>
<%= f.submit 'Book Shower', class: "btn btn-primary btn-block" %>
<% end %>
