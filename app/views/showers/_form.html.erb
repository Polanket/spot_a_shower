<%= simple_form_for shower do |f| %>

  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :address %>
  <%= f.input :features %>
  <%= f.input :price %>
  <%= f.input :photo, class: "form-control-file" %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
