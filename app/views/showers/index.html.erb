<div class="banner-index">
  <div class="container">
    <h1>We've Got You Covered <span>[</span> and Showered <span>]</span></h1>
    <p>Take a shower on the spot! We have the solution to unexpected events!</p>
    <div>
    <%= form_tag showers_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search by name or city" %>
  </div>
<% end %>
  </div>
</div>

<div class="container pt-3 pb-5">
  <div class="card">
    <% @showers.each do |shower| %>
      <%= link_to shower_path(shower) do %>
        <div class="card-shower">
          <% if shower.photo.present? %>
            <%= cl_image_tag shower.photo, crop: :fill%>
          <% else %>
            <%= image_tag('bath.jpg') %>
          <% end %>
            <div class="card-shower-infos">
              <div>
                <h1><%= shower.title %></h1>
                <h2><%= shower.address %></h2>
              </div>
              <h2 class="card-shower-pricing">â‚¬<%= shower.price %></h2>
              <%= image_tag "avatar.png", class:"card-shower-user avatar-bordered" %>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



