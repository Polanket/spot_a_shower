<% if @shower.photo.present? %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @shower.photo, crop: :fill %>');">
</div>
<% else %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dtzq3rssy/image/upload/v1563291134/architecture-bathroom-bathtub-1910472_om1swy.jpg');">
</div>
<% end %>

<div class="container py-5">
  <div class="box">
    <div class="description">
    <h1><%= @shower.title %> </h1>
    <p> <%= @shower.address %> </p>

    <!--<%=@shower.user.first_name %>  -->

    <ul class="list-unstyled">
      <li class="py-2"><i class="fas fa-shower"></i><strong> Description:</strong></li>
      <li> <%= @shower.description %> </li>
      <li class="py-2"><i class="fas fa-spa"></i><strong> Services:</strong></li>
      <li> <%= @shower.features %> </li>
      <li class="py-2"><i class="fas fa-tag"></i><strong> Price:</strong></li>
      <li> <%= @shower.price %> <span>â‚¬</span> </li>
    </ul>
    </div>
    <div class="avatar">
      <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
    </div>
  </div>

  <%= link_to "Back Home", showers_path, class: "btn btn-primary" %>

  <%= link_to "Edit", edit_shower_path(@shower), class: "btn btn-warning" %>

  <%= link_to "Delete", shower_path(@shower), class: "btn btn-danger",
  method: :delete,
  data: { confirm: "Please confirm you want to delete this shower" } %>

  <div class="booking-form">
    <%= render 'bookings/form' %>
  </div>

</div>
