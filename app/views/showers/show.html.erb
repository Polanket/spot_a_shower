<div class="container">
  <h1>Showers#show</h1>
  <p>Find me in app/views/showers/show.html.erb</p>
  <ul>
    <li> <%= @shower.description %> </li>
    <li> <%= @shower.address %> </li>
    <li> <%= @shower.features %> </li>
    <li> <%= @shower.price %> </li>
  </ul>
  <%= link_to "Back Home", showers_path, class: "btn btn-success" %>
  <%= link_to "Edit", edit_shower_path(@shower), class: "btn btn-primary" %>
  <%= link_to "Delete", shower_path(@shower), class: "btn btn-primary",
  method: :delete,
  data: { confirm: "Please confirm you want to delete this shower" } %>

  <%= render 'bookings/form' %>
</div>
